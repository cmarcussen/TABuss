<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#111111" />
            <stroke
                android:width="1dp"
                android:color="#111111" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#111111"
                android:endColor="#111111"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#111111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>