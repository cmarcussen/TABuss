<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#3C434A" />
            <stroke
                android:width="1sp"
                android:color="#3C434A" />
            <corners
                android:radius="3sp" />
            <padding
                android:left="10sp"
                android:top="6sp"
                android:right="10sp"
                android:bottom="6sp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270" />
            <stroke
                android:width="0sp"
                android:color="#FFFFFF" />
            <padding
                android:left="10sp"
                android:top="12sp"
                android:right="10sp"
                android:bottom="12sp" />
        </shape>
    </item>
</selector>